<div class="banner" style="background-image: linear-gradient(-225deg, rgba(175, 175, 175,0.6) 0%, rgba(0,36,61,0.6) 60%), url('<%= image_path('banner.jpg') %>;">
  <div class="banner-content">
    <div class="col-sm-4">
      <h1 class="align-left">Be a part</h1>
    </div>
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
      <h1 class="align-right">of local art</h1>
    </div>
  </div>
</div>

<br>
<div class="container">
  <div class="home-group">
    <div class="row align-left">
      <h3>More</h3>
    </div>
    <div class="row">
      <%= render partial: 'components/artwork', collection: @artworks, as: :artwork, locals: {height: "300px", bstp: "3"} %>
    </div>
  </div>
  <div class="home-group">
    <div class="row align-left">
      <h3>New Artworks</h3>
    </div>
    <div class="row">
      <%= render partial: 'components/artwork', collection: @recent_artwork, as: :artwork, locals: {height: "300px", bstp: "3"} %>
    </div>
  </div>
  <div class="home-group">
    <div class="row align-left">
      <% unless @artwork_option[:search].empty? %>
        <h3><%= @artwork_option[:sub] %> <%= @artwork_option[:cat] %></h3>
      <div class="row">
        <%= render partial: 'components/artwork', collection: @artwork_option_two[:search], as: :artwork, locals: {height: "300px", bstp: "3"} %>
      <% end %>
      </div>
    </div>
  </div>

</div>
