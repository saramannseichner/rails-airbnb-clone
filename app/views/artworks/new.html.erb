<div class="container">
  <div class="form-content-container">
    <h2>Upload a new artwork</h2>
    <%= simple_form_for([@user, @artwork]) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name, placeholder: 'My Mona Lisa' %>
        <%= f.input :medium, collection: @mediums, as: :grouped_select, group_method: :last, prompt: "How was it made?"%>
        <%= f.input :height, placeholder: 'cms' %>
        <%= f.input :width, placeholder: 'cms' %>
        <%= f.input :price, placeholder: 'Price per month'%>
        <%= f.input :description, placeholder: 'Tell the story of your art...' %>
        <%= f.input :address, placeholder: 'Where can the  art be picked up...'%>
        <%= f.input :photo, as: :attachinary %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, class: "gallery-btn gallery-primary" %>
      </div>
    <% end %>
  </div>
</div>

